<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>@ViewBag.Title - Admin - David Music Store</title>

    <!-- Global CSS -->
    @Styles.Render("~/content/global")

    <!-- Admin Css -->
    @Styles.Render("~/content/admin")
</head>
<body>
    <div id="sidebar">
        @Html.Partial("_AdminSidebar")
    </div>
    <div id="main">
        <div class="container-fluid">
            <div id="top-nav">
                <button type="button" id="sidebar-toggler" class="btn">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            @RenderBody()
        </div>
    </div>

    <!-- Global scripts -->
    @Scripts.Render("~/bundles/global")

    <script src="~/scripts/assets/admin/init.js"></script>
</body>
</html>
