@model List<DL.MusicStore.Web.Mvc.Areas.Admin.Models.AlbumStyle.AlbumStyleSummaryViewModel>
@{
    ViewBag.Title = "Album Styles";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    Album Styles
    <small>
        <a href="@Url.Action("create", "albumStyle", new { area = "admin" })">
            create new
        </a>
    </small>
</h2>
<div class="card card-block">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Actions</th>
                <th>#</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var style in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("edit", "albumStyle", new { area = "admin", id = style.AlbumStyleId })">
                            edit
                        </a>
                        <span>|</span>
                        <a href="@Url.Action("delete", "albumStyle", new { area = "admin", id = style.AlbumStyleId })">
                            delete
                        </a>
                    </td>
                    <td>@style.AlbumStyleId</td>
                    <td>@style.AlbumStyleName</td>
                </tr>
            }
        </tbody>
    </table>
</div>
