@model DL.MusicStore.Web.Mvc.Areas.Admin.Models.Artist.DeleteArtistViewModel
@{
    ViewBag.Title = "Delete Artist";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>
    Delete Artist
</h2>
<div class="card card-block">
    @using (Html.BeginForm("delete", "artist", new { area = "admin" },
        FormMethod.Post, new { @class = "form-delete" }))
    {
        @Html.HiddenFor(m => m.ArtistId)

        <div class="form-group">
            @Html.LabelFor(m => m.ArtistName)
            @Html.TextBoxFor(m => m.ArtistName, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <button type="submit" class="btn btn-danger">
            Confirm Delete
        </button>
        <a href="@Url.Action("index", "artist", new { area = "admin" })" class="btn btn-secondary">
            Cancel
        </a>
    }
</div>

